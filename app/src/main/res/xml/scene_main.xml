            android:layout_width="48dp"
            android:layout_height="48dp"
            android:visibility="invisible"
            motion:layout_constraintTop_toTopOf="@id/refBtn"
            motion:layout_constraintStart_toEndOf="@id/fileBtn"
            motion:layout_constraintEnd_toStartOf="@id/otherBtn"/>
        <Constraint
            android:id="@id/audioTxt"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            motion:layout_constraintStart_toStartOf="@id/audioBtn"
            motion:layout_constraintEnd_toEndOf="@id/audioBtn"
            motion:layout_constraintBottom_toBottomOf="@id/audioBtn"/>
        <Constraint
            android:id="@id/otherBtn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:visibility="invisible"
            motion:layout_constraintTop_toTopOf="@id/refBtn"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toEndOf="@id/audioBtn"/>
        <Constraint
            android:id="@id/otherTxt"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            motion:layout_constraintStart_toStartOf="@id/otherBtn"
            motion:layout_constraintEnd_toEndOf="@id/otherBtn"
            motion:layout_constraintBottom_toBottomOf="@id/otherBtn"/>

    </ConstraintSet>
    <ConstraintSet android:id="@+id/moreButtons">
        <Constraint android:id="@id/textAlignView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toTopOf="parent"
