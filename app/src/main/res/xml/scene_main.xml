        <Constraint
            android:id="@id/slideLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            motion:layout_constraintBottom_toTopOf="@id/cameraBtn"/>
        <Constraint
            android:id="@id/buttonsBack"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            motion:layout_constraintTop_toTopOf="@id/slideLayout"
            motion:layout_constraintBottom_toBottomOf="parent"/>
        <Constraint
            android:id="@id/cameraBtn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            motion:layout_constraintBottom_toTopOf="@id/cameraTxt"
            motion:layout_constraintEnd_toStartOf="@id/textBtn"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@id/cameraTxt"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
